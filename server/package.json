{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "yarn postinstall:electron && electron-builder install-app-deps",
    "postinstall:electron": "node postinstall",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn electron:serve-tsc && electron ./temp/main.js --serve",
    "start": "rm -rf ./temp && yarn electron:serve"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "@types/node": "^8.10.0",
    "electron-builder": "20.36.2",
    "electron-reload": "1.3.0",
    "electron": "4.1.3",
    "lodash": "^4.17.11",
    "npm-run-all": "4.1.5",
    "spectron": "5.0.0",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "typescript": "3.2.1",
    "wait-on": "3.2.0",
    "webdriver-manager": "12.1.0"
  }
}
